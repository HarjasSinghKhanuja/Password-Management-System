{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Flask App (Chrome - localhost:5500)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5500",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "run-flask-server"
    },
    {
      "name": "Run Flask Server (Standalone)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/app.py",
      "console": "integratedTerminal"
    }
  ]
}